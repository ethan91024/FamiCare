<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoodSymptomFragment">

    <LinearLayout
        android:id="@+id/Mood_Symptom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="24"
            android:orientation="horizontal"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="insideInset"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="99dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="日期選擇"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center">


                    </TextView>


                    <TextView
                        android:id="@+id/DDAY"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="日期"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/TWOD"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="日期"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/THREED"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="日期"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/FOURD"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="日期"
                        android:textSize="22dp"></TextView>


                    <TextView
                        android:id="@+id/FIVED"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="日期"
                        android:textSize="22dp"></TextView>

                    <TextView
                        android:id="@+id/SIXD"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="日期"
                        android:textSize="22dp"></TextView>

                    <TextView
                        android:id="@+id/SEVEND"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="日期"
                        android:textSize="22dp"></TextView>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="vertical"
                android:layout_marginHorizontal="7dp"
                >

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarStyle="insideInset"
                    tools:layout_editor_absoluteX="159dp"
                    tools:layout_editor_absoluteY="99dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="頭痛"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="頭暈"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="噁心"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="疲倦"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="胃痛"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="center"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache"
                            android:layout_width="52dp"
                            android:layout_height="48dp"


                           />

                        <CheckBox
                            android:id="@+id/dizzy"
                            android:layout_width="52dp"
                            android:layout_height="48dp"
                            />


                        <CheckBox
                            android:id="@+id/nausea"
                            android:layout_width="52dp"
                            android:layout_height="48dp"
                            />


                        <CheckBox
                            android:id="@+id/tried"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                        <CheckBox
                            android:id="@+id/stomachache"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Two"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/dizzy_Two"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />
                        <CheckBox
                            android:id="@+id/nausea_Two"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/tried_Two"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/stomachache_Two"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Three"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/dizzy_Three"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/nausea_Three"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/tried_Three"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/stomachache_Three"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Four"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/dizzy_Four"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/nausea_Four"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/tried_Four"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />
                        <CheckBox
                            android:id="@+id/stomachache_Four"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Five"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/dizzy_Five"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/nausea_Five"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/tried_Five"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/stomachache_Five"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Six"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />
                        <CheckBox
                            android:id="@+id/dizzy_Six"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />
                        <CheckBox
                            android:id="@+id/nausea_Six"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/tried_Six"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/stomachache_Six"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/headache_Seven"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />

                        <CheckBox
                            android:id="@+id/dizzy_Seven"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                        <CheckBox
                            android:id="@+id/nausea_Seven"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                        <CheckBox
                            android:id="@+id/tried_Seven"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />


                        <CheckBox
                            android:id="@+id/stomachache_Seven"
                            android:layout_width="52dp"
                            android:layout_height="48dp"

                            />



                    </LinearLayout>

                </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/back_to_mood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="返回壓力指數"
        android:textSize="20dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp">

    </TextView>


</LinearLayout>