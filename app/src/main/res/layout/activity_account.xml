<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg1"
    android:orientation="vertical"
    tools:context=".Settings.AccountActivity">

    <!--頭像跟名稱-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/background_line_deepbrown"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:padding="5dp"
            android:src="@drawable/avatar_b"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="使用者名稱"
                    android:textColor="@color/dark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="#使用者ID"
                    android:textColor="@color/dark"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--                <TextView-->
                <!--                    android:id="@+id/textView4"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:text="電子郵件帳號"-->
                <!--                    android:textColor="#000000"-->
                <!--                    android:textSize="15sp" />-->

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="xxxxx@gmail.com"
                    android:textColor="#6C6C6C"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    app:tint="#808080" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--下方個人健康狀況-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/background_line_deepbrownt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_deepbrown_topcorn"
                    android:text=" 活動"
                    android:textColor="#F4F1EA"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_directions_walk_24"
                    android:gravity="center|left"
                    android:text="  步數"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_monitor_heart_24"
                    android:gravity="center|left"
                    android:text="  心率"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_speed_24"
                    android:gravity="center|left"
                    android:text="  速度"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_local_fire_department_24"
                    android:gravity="center|left"
                    android:text="  卡路里"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/brown" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/brown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/background_line_deepbrownt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_deepbrown_topcorn"
                    android:text=" 身體狀況"
                    android:textColor="#F4F1EA"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_co2_24"
                    android:gravity="center|left"
                    android:text="  呼吸"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_bloodtype_24"
                    android:gravity="center|left"
                    android:text="  血氧"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/baseline_airline_seat_individual_suite_24"
                    android:gravity="center|left"
                    android:text="  睡眠(待做)"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/brown" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/brown" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
