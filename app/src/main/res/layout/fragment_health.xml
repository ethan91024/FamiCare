<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg4"
    tools:context=".Health.HealthFragment">

    <!--資料列表  比例9-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--  標題  -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/toolbg3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="健康"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.appcompat.widget.Toolbar>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/brown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/background_line_deepbrownt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_deepbrown_topcorn"
                    android:text=" 活動"
                    android:textColor="#F4F1EA"
                    android:textSize="30dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/stepsButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="2dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_directions_walk_24"
                    android:gravity="center|left"
                    android:text="  步數"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:id="@+id/heartrateButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="2dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_monitor_heart_24"
                    android:gravity="center|left"
                    android:text="  心率"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />


                <TextView
                    android:id="@+id/speedButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="2dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_speed_24"
                    android:gravity="center|left"
                    android:text="  速度"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />

                <TextView
                    android:id="@+id/caloriesButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_local_fire_department_24"
                    android:gravity="center|left"
                    android:text="  卡路里"
                    android:textColor="#4A4A49"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/brown" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/brown" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/background_line_deepbrownt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_deepbrown_topcorn"
                    android:text=" 身體狀況"
                    android:textColor="#F4F1EA"
                    android:textSize="30dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/respiratoryrateButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="6dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_co2_24"
                    android:gravity="center|left"
                    android:text="  呼吸"
                    android:textSize="25sp"
                    android:textColor="#4A4A49"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />


                <TextView
                    android:id="@+id/oxygensaturationButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="6dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_bloodtype_24"
                    android:gravity="center|left"
                    android:text="  血氧"
                    android:textSize="25sp"
                    android:textColor="#4A4A49"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/deepbrown" />


                <TextView
                    android:id="@+id/sleepstageButton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="7dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/baseline_airline_seat_individual_suite_24"
                    android:gravity="center|left"
                    android:text="  睡眠(待做)"
                    android:textSize="25sp"
                    android:textColor="#4A4A49"/>




            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/brown" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>