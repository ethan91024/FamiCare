<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sport.Sport4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="舒展腿部"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:text="抬起右膝到胸前，雙手拉住右膝，左腿緊貼地面。呼氣左手帶動右膝倒向身體的左邊，右手自然向外打開，眼睛看向右手或天花板方向，持續1分鐘，再換左邊"
        android:textSize="15dp"
        android:background="@drawable/cal_savebtn"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/fy">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <ImageSwitcher
                    android:id="@+id/sport1_imgswitcher"
                    android:layout_width="310dp"
                    android:layout_height="335dp"
                    android:layout_gravity="center">

                </ImageSwitcher>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/voice_recognition"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/empty"
            android:layout_below="@+id/fy"/>


        <TextView
            android:id="@+id/textview_countdown"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/empty"
            android:gravity="center"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginHorizontal="7dp"
            android:text="開 始"
            android:textStyle="bold"
            android:background="@drawable/background_deepbrown"/>
        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginHorizontal="7dp"
            android:text="重 置"
            android:textStyle="bold"
            android:background="@drawable/background_deepbrown"/>

    </LinearLayout>


</LinearLayout>