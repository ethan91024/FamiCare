<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cal_round">


        <TextView
            android:id="@+id/title"
            android:layout_width="434dp"
            android:layout_height="55dp"

            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:textColor="#C1A988"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- 添加一条线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1A988" />

        <EditText
            android:id="@+id/addevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/cal_save_editfield"
            android:ems="10"
            android:gravity="start|top"
            android:hint="事件"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColorHint="#C1A988" />

        <Button
            android:id="@+id/addtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/background_red"
            android:gravity="center_horizontal|center_vertical"
            android:text="時 間"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="timePicker"/>

        <Button
            android:id="@+id/noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/background_red"
            android:gravity="center_horizontal|center_vertical"
            android:text="通 知 對 象"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- 添加一条线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1A988" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#e8e0cf">
            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e8e0cf"
                android:text="取 消"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#C1A988"/>
            <!-- 添加一条线 -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C1A988" />

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e8e0cf"
                android:text="確 定"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#C1A988"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>