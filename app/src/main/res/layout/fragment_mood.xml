<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Mood_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideInset">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="身心狀況報告"
                        android:textColor="#FFA02C"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/analize"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_mood"
                        android:text="進階症狀分析"
                        android:textColor="#1E95E4"
                        android:textSize="28dp"
                        android:textStyle="bold"

                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="10"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/stress"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="壓力指數 : "
                            android:textColor="#FD7700"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/stressnumber"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_toRightOf="@id/stress"
                            android:gravity="center"
                            android:text="顯示數字"
                            android:textColor="#FD7700"
                            android:textSize="27dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#F8C46A" />


                    <RelativeLayout

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="45">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="300dp" />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="1dp"
                        android:text="*心率和血氧*10才是真正的數值，此為量化結果"
                        android:textSize="16dp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#F8C46A" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="緩減建議"
                        android:textColor="#FFA02C"
                        android:textSize="27dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/Advice"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/background_mood"
                        android:contextClickable="true"
                        android:gravity="center"
                        android:textColor="#1E95E4"
                        android:textSize="23dp"
                        android:textStyle="bold"

                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/Breathe"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/background_mood"
                        android:contextClickable="true"
                        android:gravity="center"
                        android:text="呼吸調整"
                        android:textColor="#1E95E4"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/Sport"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/background_mood"
                        android:contextClickable="true"
                        android:gravity="center"
                        android:textColor="#1E95E4"
                        android:textSize="23dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>