<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Settings.Login"
    android:background="@drawable/login_famicarebg">

    <androidx.cardview.widget.CardView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="293dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="登入"
                android:textAllCaps="false"
                android:textColor="#B19C80"
                android:textSize="36sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintBottom_toTopOf="@+id/password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.943">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="311dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/email_tf"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:fontFamily="@font/inter_medium"
                    android:hint="   電子郵件"
                    android:includeFontPadding="false"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:paddingStart="10dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="311dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/email_tf"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:fontFamily="@font/inter_medium"
                    android:hint="   密碼"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:paddingStart="10dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/loginb"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/inter_medium"
                android:text="登入"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/inder"
        android:text="沒有帳號?"
        android:textColor="#747272"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginb"
        app:layout_constraintVertical_bias="0.35" />


    <Button
        android:id="@+id/signup"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="137dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/inter_medium"
        android:text="註冊帳號"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />


</LinearLayout>