<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Breathe">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/toolbg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="呼吸緩解"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/Mood_Breathe_layoutA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="控制身體進行深呼吸，令大腦以及身體快速遠離疲憊，使身體和精神更加的輕鬆。"
        android:textSize="15dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/background_movie"
        android:gravity="center"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/breath_videoview"
            android:layout_width="390dp"
            android:layout_height="190dp"
            android:layout_gravity="center"></VideoView>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_brown_rightangle"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/background_line_deppbrown"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:text=" 設定時間  :"
                        android:textColor="#000000"
                        android:textSize="22dp"></TextView>

                    <EditText
                        android:id="@+id/breathe_timer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#b85135"
                        android:textSize="25dp"></EditText>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:text="分鐘"
                        android:textColor="#000000"
                        android:textSize="22dp"></TextView>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="設定時間請輸入30分鐘以內"
                    android:textSize="15dp"></TextView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/breathe_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:background="@drawable/background_deepbrown"
                        android:gravity="center"
                        android:text="開始倒數"
                        android:textSize="20dp"></Button>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <Button
                        android:id="@+id/breathe_cancel"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:background="@drawable/background_deepbrown"
                        android:gravity="center"
                        android:text="取消"
                        android:textSize="20dp">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/background_line_deppbrown"
                android:orientation="vertical">

                <View
                    android:id="@+id/gift_ani"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

